{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    // https://www.typescriptlang.org/tsconfig/#moduleResolution
    "moduleResolution": "bundler",
    // https://www.typescriptlang.org/tsconfig/#module
    "module": "es2022",
    "target": "es2022",
    "lib": ["es2023", "DOM"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    "composite": true,
  }
}
